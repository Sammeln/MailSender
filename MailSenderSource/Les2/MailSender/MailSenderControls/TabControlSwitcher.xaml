<UserControl x:Class="MailSenderControls.TabControlSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailSenderControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions> 
        <Button Grid.Column="0" Content="Назад" Click="OnBackwardButton_Click"/>
        <Button Grid.Column="1" Content="Вперёд" Click="OnForwardButton_Click"/>
    </Grid>
</UserControl>
